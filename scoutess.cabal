name: scoutess
version: 0.1
cabal-version: >=1.6
build-type: Simple
license: BSD3
license-file: LICENSE
copyright: 2012 Jeremy Shaw, Alp Mestanogullari
maintainer: alpmestan@gmail.com
homepage: https://patch-tag.com/r/alpmestan/scoutess
synopsis: A Haskell build bot for cabal-powered projects
category: Testing
author: Jeremy Shaw, Alp Mestanogullari
data-dir: ""

library
    build-depends: base == 4.*, filepath == 1.3.*, directory == 1.1.*, Cabal == 1.14.*
                 , bytestring == 0.9.*, mtl == 2.1.*, filemanip == 0.3.*, text == 0.11.*
                 , containers == 0.4.*, process == 1.1.*, zlib == 0.5.*, tar == 0.4.*
                 , old-time == 1.1.*, old-locale == 1.0.*, network == 2.3.*, HTTP == 4000.2.*
    exposed-modules: Scoutess.Core Scoutess.Config
                     Scoutess.DataFlow Scoutess.Server
                     Scoutess.Service.LocalHackage.Core Scoutess.Service.PackDeps.Core
                     Scoutess.Service.Source.Darcs
                     Scoutess.Service.Source.Fetch Scoutess.Service.Source.Hackage
                     Scoutess.Utils.Archives
                     Scoutess.Utils.Directory Scoutess.Utils.HTTP
    exposed: True
    buildable: True

executable scoutess
    main-is: Main.hs
    buildable: True
    ghc-options: -O2 -threaded

