Name:                scoutess
Version:             0.1
Synopsis:            A Haskell build bot for cabal-powered projects
-- Description:
Homepage:            https://patch-tag.com/r/alpmestan/scoutess
License:             BSD3
License-file:        LICENSE
Author:              Jeremy Shaw, Alp Mestanogullari
Maintainer:          alpmestan@gmail.com
Copyright:           2012 Jeremy Shaw, Alp Mestanogullari
Category:            Testing
Build-type:          Simple
Cabal-version:       >=1.2

Library
  Exposed-Modules:
                     Control.Pipe.Process
                     Scoutess.Config
                     Scoutess.Server
                     Scoutess.Service.Builder.Core
                     Scoutess.Service.Haddock.Core
                     Scoutess.Service.Haddock.CoreHaddock
                     Scoutess.Service.LocalHackage.Core
                     Scoutess.Service.PackDeps.Core
                     Scoutess.Service.Source.Core
                     Scoutess.Service.Source.Darcs
                     Scoutess.Service.Source.Fetch
                     Scoutess.Service.Source.Hackage
                     Scoutess.Utils.Archives
                     Scoutess.Utils.Cabal
                     Scoutess.Utils.Directory
                     Scoutess.Utils.Haddock
                     Scoutess.Utils.HTTP

  -- we require pipes-core/pipes-extra from github at the moment.
  -- https://github.com/pcapriotti/pipes-core
  -- https://github.com/pcapriotti/pipes-extra
  Build-Depends:     base        < 5,
                     aeson       == 0.6.*,
                     bytestring  == 0.9.*,
                     Cabal       == 1.14.*,
                     directory   == 1.1.*,
                     filemanip   == 0.3.*,
                     filepath    == 1.3.*,
                     HTTP        == 4000.2.*,
                     mtl         == 2.0.*,
                     network     == 2.3.*,
                     packdeps    == 0.3.*,
                     pipes-core  == 0.0.*,
                     pipes-extra == 0.0.*,
                     process     == 1.1.*,
                     safecopy    == 0.6.*,
                     stm         == 2.2.*,
                     tar         == 0.4.*,
                     text        == 0.11.*,
                     void        == 0.5.*,
                     zlib        == 0.5.*


Executable scoutess
  Main-is: Main.hs
  GHC-Options: -O2 -threaded

